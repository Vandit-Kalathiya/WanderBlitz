<% layout("/layouts/boilerPlate") %>

    <body>
        <div class="row">
            <div class="col-8 offset-2">
                <br> 
                <h3>Create a New Listing </h3>
                <form action="/listings" method="post">
                    <div class="mb-3">
                        <label for="title" class="form-label">Title</label>
                        <input type="text" name="listing[title]" id="" placeholder="Add a catchy title" class="form-control">
                    </div>
                    <div class="mb-3">
                        <label for="description" class="form-label">Description</label>
                        <textarea name="listing[description]" placeholder="enter description" id="" cols="30" rows="5"
                            class="form-control"></textarea>
                    </div>
                    <div class="mb-3">
                        <label for="image" class="form-label">Image Link</label>
                        <input type="text" placeholder="enter image URL/Link" name="listing[image.url]" id=""
                            class="form-control">
                    </div>
                    <div class="row">
                        <div class="mb-3 col-md-4">
                            <label for="price" class="form-label">Price</label>
                            <input type="number" name="listing[price]" id="" placeholder="1,200" class="form-control">
                        </div>
                         <div class="mb-3 col-md-8">
                            <label for="country" class="form-label">Country</label>
                            <input type="text" name="listing[country]" id="" placeholder="India"
                                class="form-control">
                        </div>
                    </div>
                    <div class="mb-3">
                        <label for="location" class="form-label">Location</label>
                        <input type="text" name="listing[location]" id="" placeholder="Jaipur, Rajasthan"
                            class="form-control">
                    </div>
                    <button class="btn btn-dark add-btn mt-3">Add</button><br><br>
                </form>
            </div>
        </div>
    </body>