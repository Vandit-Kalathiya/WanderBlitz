<% layout("/layouts/boilerPlate") %>

    <body>
        <div class="row">
            <div class="col-8 offset-3 mt-3 show-card">
                <h3>
                    <%= listing.title%>
                </h3>
            </div>
            <div class="card col-6 offset-3 show-card listing-card">
                <img src="<%=listing.image%>" class="card-img-top show-img" alt="listing image">
                <!-- <div class="card-body mb-3">
                    <p class="card-text">
                        <%= listing.title%>
                    </p>
                </div> -->
                <ul>
                    <li>
                        <%= listing.title%>
                    </li>
                    <li>
                        <%= listing.description%>
                    </li>
                    <li>
                        &#8377; <%= listing.price.toLocaleString("en-IN")%>
                    </li>
                    <li>
                        <%= listing.location%>
                    </li>
                    <li>
                        <%= listing.country%>
                    </li>
                </ul>
                <br>
                <div class="btns">
                    <div class="col-1">
                        <a href="/listings/<%=listing._id%>/edit" class="btn btn-dark edit-btn">Edit</a><br><br>
                    </div>
                    <form method="post" action="/listings/<%=listing._id%>?_method=DELETE">
                        <button class="btn btn-dark offset-5 del">Delete</button>
                    </form>
                </div>
            </div>
            <div class="col-6 offset-3 mb-3">
                <hr>
                <h4>Leave a Review</h4>
                <form action="/listings/<%=listing.id%>/reviews" method="post" novalidate class="needs-validation">
                    <div class="mb-3 mt-3">
                        <label for="rating" class="form-label">Rating</label>
                        <input type="range" name="review[rating]" id="rating" min="1" max="5" class="form-range">
                    </div>
                    <div class="mb-3 mt-3">
                        <label for="comment" class="form-label">Comments</label>
                        <textarea name="review[comment]" id="comment" cols="30" rows="5" class="form-control"
                            required></textarea>
                        <div class="invalid-feedback">
                            Please add some comments for review.!
                        </div>
                    </div>
                    <button class="btn btn-outline-dark">Submit</button>
                </form>
                <hr>
                <p><b>All Reviews</b></p>
                <div class="row">
                    <% for( review of listing.reviews) { %>
                        <div class="card col-5 mb-3 ms-3 ">
                            <div class="cars-body">
                                <h5 class="card-title mt-1">John Doe</h5>
                                <p class="card-text">
                                    <%=review.comment%>
                                </p>
                                <p class="card-text">
                                    <%=review.rating%> stars
                                </p>
                            </div>
                            <form action="/listings/<%=listing._id%>/reviews/<%=review._id%>?_method=DELETE"
                                class="mb-3" method="post">
                                <button class="btn btn-sm btn-dark mt-2">Delete</button>
                            </form>
                        </div>
                        <%}%>
                </div>
            </div>
        </div>
    </body>
