<% layout("/layouts/boilerPlate") %>
<% const user = { username: "", password: "" }; %>
    <style>
        .login-form ::placeholder {
            padding: 0.5rem;
        }
        input {
            border-radius: 3px;
            padding-left: 6px;
        }
        .login-form input:focus {
            border-color: #7dd0ce !important;
            border-width: 3px; 
            border-style: solid; 
            border-radius: 3px;
            padding: 5px 0;
            outline: none; 
            box-shadow: 3px 3px 3px 3px rgba(79, 70, 229, 0.1); 
        }
        
        ::selection {
            background-color: #61c0bf; 
            color: #FFFFFF;
        }
    </style>
</head>
<body>
    <section>
        <main>
            <div class="section-login">
                <div class="container flex flex-col md:flex-row items-center justify-between space-y-8 md:space-y-0 md:space-x-64">
                    <div class="login-image mb-8 md:mb-0 md:mr-10" style="display: flex; justify-content: center; align-items: center;">
                        <img src="/images/Paper map-amico.png" alt="" width="500" height="500" />
                    </div>                   
                    <div class="login-form w-full md:w-96">
                        <h1 class="text-3xl font-extrabold mb-4">Login</h1>
                        <form onsubmit="handleSubmit(event)" class="space-y-4">
                            <div class="flex flex-col relative">
                                <label for="username" id="username" class="text-sm font-medium text-gray-700 mb-3 text-left relative z-10 label-effect">Username</label>
                                <input type="username" name="username" value="<%= user.username %>" onchange="handleInput(event, 'username')" placeholder="Enter username" class="h-8 border-gray-300  shadow-sm focus:border-indigo-300 focus:ring focus:ring-indigo-200 focus:ring-opacity-50" tabindex="1" required autocomplete="off" />
                            </div>
                            <div class="flex flex-col">
                                <label for="password" id="password" class="text-sm font-medium text-gray-700 mb-3 text-left relative z-10 label-effect">Password</label>
                                <input type="password" name="password" value="<%= user.password %>" onchange="handleInput(event, 'password')" placeholder="Enter password" class="h-8 border-gray-300  shadow-sm focus:border-indigo-300 focus:ring focus:ring-indigo-200 focus:ring-opacity-50" tabindex="1" required autocomplete="off" />
                            </div>
                            <button type="submit" class="w-full py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-4f8a89 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" style="background-color: #61c0bf;" onmouseover="this.style.backgroundColor='#519e9d'" onmouseout="this.style.backgroundColor='#61c0bf'">Login</button>
                        </form>
                    </div>
                </div>
            </div>
        </main>
    </section>
</body>
</html>
